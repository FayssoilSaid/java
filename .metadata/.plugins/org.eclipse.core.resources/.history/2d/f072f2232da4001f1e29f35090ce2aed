package exercice2;

class Vecteur3d {
	double x,y,z;
	public Vecteur3d(double x, double y, double z) {
		this.x=x;
		this.y=y;
		this.z=z;
	}
	public void afficher() {
		System.out.println("("+this.x+","+this.y+","+this.z+")");
	}
	public double norme() {
		return Math.sqrt(Math.pow(this.x, this.x)+Math.pow(this.y, this.y)+Math.pow(this.z, this.z));
	}
}
