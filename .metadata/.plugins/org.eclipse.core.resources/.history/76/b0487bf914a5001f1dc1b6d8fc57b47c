package exercice5;

public class Compte {
	double sol;//slde
	Client prop;//proprietaire
	static int cpt=0;
	int num;
	public Compte(double sol,Client prop) {
		this.sol=sol;
		this.prop=prop;
		this.num=++cpt;
	}
	public Compte(Compte c) {
		this(c.sol,c.prop);
	}
	public void afficher() {
		System.out.println("Propriétaire du compte numéro: "+this.num);
		this.prop.afficher();
		System.out.println("Solde de compte: "+this.sol);
	}
}
