package exercice5;

public class Compte {
	double sol;//slde
	Client prop;//proprietaire
	static int cpt=0;
	int num;
	public Compte(double sol,Client prop) {
		this.sol=sol;
		this.prop=prop;
		this.num=++cpt;
	}
	public Compte(Compte c) {
		this(c.sol,c.prop);
	}
	public void afficher() {
		System.out.println("Propriétaire du compte numéro: "+this.num);
		this.prop.afficher();
		System.out.println("Solde de compte: "+this.sol);
	}
	public void deposer(double mt) {
		this.sol+=mt;
	}
	public void retirer(double mt) {
		this.sol-=mt;
	}
	public void transfererVers(double mt,Compte c) {
		this.retirer(mt);
		c.deposer(mt);
	}
	public double differenceSoldes(Compte c) {
		return Math.abs(this.sol-c.sol);
	}
	public static void permuterComptes(Compte c1,Compte c2) {
		Compte tmp=c1;
		c1.sol=c2.sol;
		c1.prop=c2.prop;
		c1.num=c2.num;
		
		c2.sol=tmp.sol;
		c2.prop=tmp.prop;
		c2.num=tmp.num;
	}
}
